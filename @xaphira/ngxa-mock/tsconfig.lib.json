{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "../../out-tsc/ngxa-mock",
    "baseUrl": "./",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "inlineSources": true,
    "typeRoots": [
      "../../node_modules/@types"
    ],
    "types": [
      "googlemaps"
    ],
    "lib": [
      "dom",
      "es2018"
    ],
    "paths": {
      "@angular/*": [
        "../../node_modules/@angular/*"
      ],
      "@nebular/*": [
        "../../node_modules/@nebular/*"
      ],
      "@xaphira/core": [
        "../../node_modules/@xaphira/core"
      ],
      "@xaphira/core/*": [
        "../../node_modules/@xaphira/core/*"
      ],
      "@xaphira/utils": [
        "../../node_modules/@xaphira/utils"
      ],
      "@xaphira/utils/*": [
        "../../node_modules/@xaphira/utils/*"
      ],
      "@xaphira/shared": [
        "../../node_modules/@xaphira/shared"
      ],
      "@xaphira/shared/*": [
        "../../node_modules/@xaphira/shared/*"
      ],
      "@xaphira/ngxa-storage": [
        "../../node_modules/@xaphira/ngxa-storage"
      ],
      "@xaphira/ngxa-storage/*": [
        "../../node_modules/@xaphira/ngxa-storage/*"
      ],
      "@xaphira/ngxa-theme": [
        "../../node_modules/@xaphira/ngxa-theme"
      ],
      "@xaphira/ngxa-theme/*": [
        "../../node_modules/@xaphira/ngxa-theme/*"
      ],
      "@xaphira/ngxa-theme/styles": [
        "../../node_modules/@xaphira/ngxa-theme/src/lib/styles"
      ],
      "@xaphira/ngxa-theme/styles/*": [
        "../../node_modules/@xaphira/ngxa-theme/src/lib/styles/*"
      ],
      "@xaphira/ngxa-common": [
        "../../node_modules/@xaphira/ngxa-common"
      ],
      "@xaphira/ngxa-common/*": [
        "../../node_modules/@xaphira/ngxa-common/*"
      ]
    }
  },
  "angularCompilerOptions": {
    "annotateForClosureCompiler": true,
    "skipTemplateCodegen": true,
    "strictMetadataEmit": true,
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true,
    "enableResourceInlining": true,
  },
  "exclude": [
    "src/test.ts",
    "**/*.spec.ts",
    "../../dist/**"
  ],
  "include": [
    "src/**/*",
    "**/src/**/*"
  ]
}
